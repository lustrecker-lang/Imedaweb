/**
 * @file Firestore Security Rules
 * @core_philosophy This ruleset allows read access to all documents but restricts write access to authenticated users.
 * @data_structure The data is organized into two top-level collections: 'pages' and 'companyProfile'.
 * @key_security_decisions
 *   - All documents are publicly readable via `get` and `list`.
 *   - Only authenticated users can create, update, or delete documents in both `pages` and `companyProfile`.
 *   - Write operations require the user to be authenticated (`isSignedIn()`).
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows read access to all pages and restricts write access to authenticated users.
     * @path /pages/{pageId}
     * @allow (get, list): Any user can read the page.
     * @allow (create, update, delete): Only authenticated users can modify the page.
     * @deny create: if false; (unauthenticated user)
     * @principle Allows public read access but enforces authentication for all write operations.
     */
    match /pages/{pageId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Allows read access to the company profile and restricts write access to authenticated users.
     * @path /companyProfile/{profileId}
     * @allow (get, list): Any user can read the company profile.
     * @allow (create, update, delete): Only authenticated users can modify the company profile.
     * @deny create: if false; (unauthenticated user)
     * @principle Allows public read access but enforces authentication for all write operations.
     */
    match /companyProfile/{profileId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    // Helper function to check if a user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }
  }
}