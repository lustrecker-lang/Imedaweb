/**
 * @fileoverview Firestore Security Rules for the IMEDA website project.
 *
 * Core Philosophy:
 * This ruleset enforces a role-based access control model where only authenticated
 * administrators can modify home page content.  Admin status is determined by
 * the existence of a document in the `/roles_admin/{adminId}` collection.
 *
 * Data Structure:
 * - `/roles_admin/{adminId}`: Stores admin user IDs. The existence of a document
 *   at this path indicates that the user is an admin.
 * - `/homePageContent/{homePageContentId}`: Stores the content for the home page.
 *   Only admins can create, update, or delete documents in this collection.
 *
 * Key Security Decisions:
 * - Listing of admin users (`/roles_admin`) is denied to all clients.
 * - HomePageContent can be read by anyone, but only admins can write.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the current user is signed in.
     * @return {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the current user is an admin.
     * @return {boolean} True if the user is an admin, false otherwise.
     */
    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    /**
     * @description Checks if the current user is the owner of the document (adminId matches request.auth.uid).
     * @param {string} adminId - The admin user ID.
     * @return {boolean} True if the user is the owner, false otherwise.
     */
    function isOwner(adminId) {
      return isSignedIn() && request.auth.uid == adminId;
    }

    /**
     * @description Checks if the current user is the owner of the existing document.
     * @param {string} adminId - The admin user ID.
     * @return {boolean} True if the user is the owner and the document exists, false otherwise.
     */
    function isExistingOwner(adminId) {
      return isOwner(adminId) && get(/databases/$(database)/documents/roles_admin/$(adminId)).data != null;
    }

    /**
     * @description Rules for the /roles_admin/{adminId} collection.
     * @path /roles_admin/{adminId}
     * @allow (create) - An authenticated user can create their own admin role if their ID matches the document ID (self-creation).
     * @allow (get) - An authenticated user can get their own admin role if their ID matches the document ID.
     * @deny (create) - An unauthenticated user cannot create an admin role.
     * @deny (update) - No one can update an admin role document.
     * @deny (delete) - No one can delete an admin role document.
     * @principle Enforces owner-only access for creating admin role documents.
     */
    match /roles_admin/{adminId} {
      allow get: if isOwner(adminId);
      allow list: if false;
      allow create: if isOwner(adminId);
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Rules for the /homePageContent/{homePageContentId} collection.
     * @path /homePageContent/{homePageContentId}
     * @allow (get) - Anyone can read the home page content.
     * @allow (list) - Anyone can list the home page content.
     * @allow (create) - Only admins can create new home page content.
     * @allow (update) - Only admins can update existing home page content.
     * @allow (delete) - Only admins can delete home page content.
     * @principle Enforces admin-only access for writes to home page content.
     */
    match /homePageContent/{homePageContentId} {
      allow get: if true;
      allow list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
  }
}