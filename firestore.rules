
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAdmin() {
      return request.auth != null;
    }

    match /pages/{pageId} {
      allow read;
      allow write: if isAdmin();
    }

    match /companyProfile/{profileId} {
      allow read;
      allow write: if isAdmin();
    }
    
    match /leads/{leadId} {
      allow create;
      allow read, write, delete: if isAdmin();
    }
    
    match /campuses/{campusId} {
      allow read;
      allow write: if isAdmin();
    }
    
    match /services/{serviceId} {
       allow read;
       allow write: if isAdmin();
    }
    
    match /course_categories/{categoryId} {
      allow read;
      allow write: if isAdmin();
    }
    
    match /course_themes/{themeId} {
      allow read;
      allow write: if isAdmin();
    }
    
    match /course_formations/{formationId} {
      allow read;
      allow write: if isAdmin();
    }

    match /course_modules/{moduleId} {
      allow read;
      allow write: if isAdmin();
    }
  }
}
