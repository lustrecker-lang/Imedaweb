/**
 * @file Firestore Security Rules
 * @description This ruleset defines access control for the Firestore database.
 *
 * Core Philosophy:
 * - The /pages and /companyProfile collections are publicly readable but only writable by authenticated users.
 * - The /leads collection allows public creation of documents, but only allows authenticated users to read/manage them.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Helper Function to check if a user is signed in.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Allows public read access but restricts write access to authenticated users.
     */
    match /pages/{pageId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    /**
     * @description Allows public read access but restricts write access to authenticated users.
     */
    match /companyProfile/{profileId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    /**
     * @description Allows public creation of leads, but restricts all other access to authenticated users.
     * @path /leads/{leadId}
     * @allow (create) Anyone can create a new lead.
     * @allow (get, list, update, delete) Only authenticated users (admins) can read or manage leads.
     * @principle Allows public form submissions while securing lead data for admin access only.
     */
    match /leads/{leadId} {
        // Allow signed-in users to read, update, and delete.
        allow get, list, update, delete: if isSignedIn();

        // Allow ANYONE (public) to create.
        allow create: if true;
    }
  }
}
