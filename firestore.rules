
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read-only access to pages and company profile
    match /pages/{pageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /companyProfile/{profileId} {
        allow read: if true;
        allow write: if request.auth != null;
    }

    // Allow public read-only access to campuses
    match /campuses/{campusId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow anyone to create a lead, but only admins to read/delete
    match /leads/{leadId} {
      allow create: if true;
      allow read, delete: if request.auth != null;
    }
    
    // Allow authenticated users to manage services
    match /services/{serviceId} {
        allow read, write: if request.auth != null;
    }

    // Allow authenticated users to manage course content
    match /course_categories/{categoryId} {
        allow read, write: if request.auth != null;
    }
    
    match /course_themes/{themeId} {
        allow read, write: if request.auth != null;
    }

    match /course_formations/{formationId} {
        allow read, write: if request.auth != null;
    }
  }
}
    