rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Allow authenticated users to manage pages
    match /pages/{pageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow authenticated users to manage company profile
    match /companyProfile/{profileId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow anyone to create leads, but only authenticated users to read/delete
    match /leads/{leadId} {
      allow create: if true;
      allow read, delete, update: if request.auth != null;
    }

    // Allow authenticated users to manage campuses
    match /campuses/{campusId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow authenticated users to manage services
    match /services/{serviceId} {
      allow read, write: if request.auth != null;
    }

    // Allow authenticated users to manage the course hierarchy
    match /course_categories/{categoryId} {
      allow read, write: if request.auth != null;
    }
    match /course_themes/{themeId} {
      allow read, write: if request.auth != null;
    }
    match /course_formations/{formationId} {
      allow read, write: if request.auth != null;
    }
    match /course_modules/{moduleId} {
      allow read, write: if request.auth != null;
    }
  }
}
