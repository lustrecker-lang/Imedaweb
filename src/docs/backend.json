{
  "entities": {
    "CompanyProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "CompanyProfile",
      "type": "object",
      "description": "Stores company branding information like name and logos.",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the company."
        },
        "logoUrl": {
          "type": "string",
          "description": "URL of the uploaded company logo.",
          "format": "uri"
        },
        "iconUrl": {
          "type": "string",
          "description": "URL of the uploaded company icon (e.g., for favicons).",
          "format": "uri"
        },
        "faviconUrl": {
          "type": "string",
          "description": "URL of the uploaded company favicon.",
          "format": "uri"
        }
      },
      "required": [
        "name"
      ]
    },
    "PageContent": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "PageContent",
      "type": "object",
      "description": "Stores the content for a specific page, broken down into sections.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the page (e.g., 'home', 'about')."
        },
        "title": {
          "type": "string",
          "description": "The user-friendly title of the page (e.g., 'Home Page')."
        },
        "sections": {
          "type": "array",
          "description": "An array of content sections for this page.",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique identifier for the section within the page (e.g., 'hero', 'features')."
              },
              "title": {
                "type": "string",
                "description": "The title of the section."
              },
              "content": {
                "type": "string",
                "description": "The main text content for the section."
              },
              "imageUrl": {
                "type": "string",
                "description": "URL for an optional background or feature image.",
                "format": "uri"
              }
            },
            "required": ["id", "title", "content"]
          }
        },
        "ogTitle": {
          "type": "string",
          "description": "The Open Graph title for social media sharing."
        },
        "ogDescription": {
          "type": "string",
          "description": "The Open Graph description for social media sharing."
        },
        "ogImage": {
          "type": "string",
          "description": "The Open Graph image URL for social media sharing.",
          "format": "uri"
        }
      },
      "required": ["id", "title", "sections"]
    },
    "Lead": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Lead",
      "type": "object",
      "description": "Represents a lead submitted through a contact form.",
      "properties": {
        "fullName": {
          "type": "string",
          "description": "The full name of the person who submitted the form."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The email address of the lead."
        },
        "phone": {
          "type": "string",
          "description": "The phone number of the lead (optional)."
        },
        "message": {
          "type": "string",
          "description": "The message submitted by the lead."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the lead was created."
        },
        "leadType": {
            "type": "string",
            "description": "Type of lead, e.g., 'Contact Form' or 'Course Inquiry'."
        },
        "courseName": {
            "type": "string",
            "description": "Name of the course if the lead is a course inquiry."
        }
      },
      "required": ["fullName", "email", "createdAt"]
    },
    "Campus": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Campus",
      "type": "object",
      "description": "Represents a school campus and all its page content.",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the campus."
        },
        "slug": {
          "type": "string",
          "description": "A URL-friendly version of the campus name."
        },
        "description": {
          "type": "string",
          "description": "A short description of the campus for nav menus."
        },
        "imageUrl": {
          "type": "string",
          "description": "A general image for the campus, used in listings.",
          "format": "uri"
        },
        "hero": {
          "type": "object",
          "properties": {
            "backgroundMediaUrl": { "type": "string", "format": "uri" },
            "title": { "type": "string" },
            "subtitle": { "type": "string" }
          }
        },
        "campusDescription": {
          "type": "object",
          "properties": {
            "headline": { "type": "string" },
            "body": { "type": "string" }
          }
        },
        "academicOffering": {
          "type": "object",
          "properties": {
            "headline": { "type": "string" },
            "subtitle": { "type": "string" },
            "courses": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "string" },
                  "name": { "type": "string" },
                  "description": { "type": "string" }
                }
              }
            }
          }
        },
        "campusExperience": {
          "type": "object",
          "properties": {
            "headline": { "type": "string" },
            "features": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "string" },
                  "name": { "type": "string" },
                  "description": { "type": "string" },
                  "mediaUrl": { "type": "string", "format": "uri" }
                }
              }
            }
          }
        },
        "visitAndContact": {
          "type": "object",
          "properties": {
            "headline": { "type": "string" },
            "subtitle": { "type": "string" },
            "address": { "type": "string" }
          }
        },
        "faq": {
          "type": "object",
          "properties": {
            "headline": { "type": "string" },
            "faqs": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "string" },
                  "question": { "type": "string" },
                  "answer": { "type": "string" }
                }
              }
            }
          }
        }
      },
      "required": ["name", "slug"]
    },
    "Service": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Service",
      "type": "object",
      "description": "Represents a service offered by the company.",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the service."
        },
        "description": {
          "type": "string",
          "description": "A description of the service."
        },
        "mediaUrl": {
          "type": "string",
          "description": "URL for an image or video representing the service.",
          "format": "uri"
        },
        "isPremium": {
          "type": "boolean",
          "description": "Indicates if the service is a premium offering."
        },
        "isOptional": {
          "type": "boolean",
          "description": "Indicates if the service is optional or included by default."
        }
      },
      "required": ["name"]
    },
    "CourseCategory": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "CourseCategory",
      "type": "object",
      "description": "Represents a course category (discipline).",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "mediaUrl": { "type": "string", "format": "uri" }
      },
      "required": ["name"]
    },
    "CourseTheme": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "CourseTheme",
      "type": "object",
      "description": "Represents a theme within a category.",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "categoryId": { "type": "string" }
      },
      "required": ["name", "categoryId"]
    },
    "CourseFormation": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "CourseFormation",
      "type": "object",
      "description": "Represents a specific course (formation) within a theme.",
      "properties": {
        "name": { "type": "string", "description": "The name of the formation." },
        "themeId": { "type": "string", "description": "The ID of the parent theme." },
        "formationId": { "type": "string", "description": "A custom, user-defined ID for the formation." },
        "objectifPedagogique": { "type": "string", "description": "The pedagogical objective." },
        "preRequis": { "type": "string", "description": "Prerequisites for the course." },
        "publicConcerne": { "type": "string", "description": "The target audience." },
        "methodesMobilisees": { "type": "string", "description": "Methods used in the course." },
        "moyensPedagogiques": { "type": "string", "description": "Pedagogical means." },
        "modalitesEvaluation": { "type": "string", "description": "Evaluation modalities." },
        "prixAvecHebergement": { "type": "string", "description": "Price with accommodation." },
        "prixSansHebergement": { "type": "string", "description": "Price without accommodation." },
        "format": { "type": "string", "description": "The format of the course (e.g., online, in-person)." }
      },
      "required": ["name", "themeId", "formationId"]
    },
    "CourseModule": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "CourseModule",
      "type": "object",
      "description": "Represents a module within a formation.",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "formationId": { "type": "string" }
      },
      "required": ["name", "formationId"]
    },
    "CourseDetailPageContent": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "CourseDetailPageContent",
      "type": "object",
      "description": "Stores reusable content for the course detail page.",
      "properties": {
        "valeurImeda": {
          "type": "object",
          "properties": {
            "title": { "type": "string" },
            "content": { "type": "string" },
            "imageUrl": { "type": "string", "format": "uri" }
          }
        },
        "faq": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "question": { "type": "string" },
              "answer": { "type": "string" }
            },
            "required": ["id", "question", "answer"]
          }
        },
        "contact": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "title": { "type": "string" },
            "description": { "type": "string" },
            "francePhone": { "type": "string" },
            "uaePhone": { "type": "string" },
            "email": { "type": "string", "format": "email" },
            "imageUrl": { "type": "string", "format": "uri" }
          }
        }
      }
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/pages/{pageId}",
        "definition": {
          "entityName": "PageContent",
          "schema": {
            "$ref": "#/backend/entities/PageContent"
          },
          "description": "Stores all content for a specific page, editable by authenticated users.",
          "params": [
            {
              "name": "pageId",
              "description": "The unique identifier for the page (e.g., 'home', 'courses')."
            }
          ]
        }
      },
      {
        "path": "/courseDetailPage/{docId}",
        "definition": {
          "entityName": "CourseDetailPageContent",
          "schema": {
            "$ref": "#/backend/entities/CourseDetailPageContent"
          },
          "description": "Stores reusable content for the course detail page.",
          "params": [
            {
              "name": "docId",
              "description": "Usually 'main' for a singleton document."
            }
          ]
        }
      },
      {
        "path": "/companyProfile/{profileId}",
        "definition": {
          "entityName": "CompanyProfile",
          "schema": {
            "$ref": "#/backend/entities/CompanyProfile"
          },
          "description": "Stores company branding information.",
          "params": [
            {
              "name": "profileId",
              "description": "The unique identifier for the company profile."
            }
          ]
        }
      },
      {
        "path": "/leads/{leadId}",
        "definition": {
          "entityName": "Lead",
          "schema": {
            "$ref": "#/backend/entities/Lead"
          },
          "description": "Stores all leads submitted through the contact form.",
          "params": [
            {
              "name": "leadId",
              "description": "The unique identifier for the lead."
            }
          ]
        }
      },
      {
        "path": "/campuses/{campusId}",
        "definition": {
          "entityName": "Campus",
          "schema": {
            "$ref": "#/backend/entities/Campus"
          },
          "description": "Represents a school campus and all its page content.",
          "params": [
            {
              "name": "campusId",
              "description": "The unique identifier for the campus."
            }
          ]
        }
      },
      {
        "path": "/services/{serviceId}",
        "definition": {
          "entityName": "Service",
          "schema": {
            "$ref": "#/backend/entities/Service"
          },
          "description": "Stores information about each service offered.",
          "params": [
            {
              "name": "serviceId",
              "description": "The unique identifier for the service."
            }
          ]
        }
      },
      {
        "path": "/course_categories/{categoryId}",
        "definition": { "entityName": "CourseCategory", "schema": { "$ref": "#/backend/entities/CourseCategory" } }
      },
      {
        "path": "/course_themes/{themeId}",
        "definition": { "entityName": "CourseTheme", "schema": { "$ref": "#/backend/entities/CourseTheme" } }
      },
      {
        "path": "/course_formations/{formationId}",
        "definition": { "entityName": "CourseFormation", "schema": { "$ref": "#/backend/entities/CourseFormation" } }
      },
      {
        "path": "/course_modules/{moduleId}",
        "definition": { "entityName": "CourseModule", "schema": { "$ref": "#/backend/entities/CourseModule" } }
      }
    ],
    "reasoning": "This Firestore data structure allows for modular content management. Each page's content is stored in a separate document within the 'pages' collection. This makes it easy to add new pages and edit their content by section."
  }
}